        "import tkinter as tk\n",
        "from tkinter import ttk\n",
        "\n",
        "root = tk.Tk()\n",
        "\n",
        "selected_option = tk.StringVar()\n",
        "\n",
        "options = [\"Opci贸n 1\", \"Opci贸n 2\", \"Opci贸n 3\"]\n",
        "\n",
        "for option in options:\n",
        "    ttk.Radiobutton(root, text=option, variable=selected_option, value=option).pack()\n",
        "\n",
        "def reset_selection():\n",
        "    selected_option.set(\"\")\n",
        "\n",
        "ttk.Button(root, text=\"Reiniciar\", command=reset_selection).pack()\n",
        "\n",
        "selected_label = ttk.Label(root, text=\"No se ha seleccionado ninguna opci贸n\")\n",
        "selected_label.pack()\n",
        "\n",
        "def update_selection(*args):\n",
        "    selected_label.config(text=\"Ha seleccionado {}\".format(selected_option.get()))\n",
        "\n",
        "selected_option.trace_add(\"write\", update_selection)\n",
        "\n",
        "root.mainloop()"
      ]
    }
  ]
