public class MyClass {
    public static void main(String args[]) {
     String [] nombres ={"Juan","Carlos", "Maria", "Pedro"};
     
     String nombre = " ";
          for (int i = 0; i < nombres.length; i++){

    
    
         nombre = nombre +" "+ nombres[i];
         
      System.out.println(nombre);
     }
    }
}
